<div class="container">
  <div class="col-md-6"> 
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>All Revenue</h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Date</th>
              <th>Amount</th>
              <th>Details</th>
            </tr>
          </thead>
          <tbody>
            <% @revenue_records.each do |revenue| %>
              <tr>
                <td><%= revenue.period %></td>
                <td><%= number_to_currency(revenue.amount) %></td>
                <td><%= revenue.details %></td>
              </tr>
            <% end %>
            <tr>
              <td colspan="3">Total: <span class="pull-right total"><%= number_to_currency(render_total(@revenue_records)) %></span></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="col-md-6"> 
     <div class="panel panel-info">
      <div class="panel-heading">
        <h3>All Expense</h3>
      </div>
      <div class="panel-body">
        <table class="table table-striped table-bordered">
          <thead>
            <tr>
              <th>Date</th>
              <th>Amount</th>
              <th>Details</th>
            </tr>
          </thead>
          <tbody>
            <% @expense_records.each do |expense| %>
              <tr>
                <td><%= expense.period %></td>
                <td><%= number_to_currency(expense.amount) %></td>
                <td><%= expense.details %></td>
              </tr>
            <% end %>
            <tr>
              <td colspan="3">Total: <span class="pull-right total"><%= number_to_currency(render_total(@expense_records)) %></span></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>