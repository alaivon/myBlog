<%= simple_form_for @record do |f| %>
	<div class="form-group">	
	<%= f.input :catalog_id, collection: Catalog.all, label_method: :kind, label: "Type", include_blank: false %>
	</div>
	<div class="form-group">
		<%= f.input :period %>
	</div>
	<div class="form-group">
		<%= f.input :amount %>
	</div>
	<div class="form-group">
		<%= f.input :details %>
	</div>

	<%= f.submit class: "btn btn-default btn-xs" %> 

<% end %>