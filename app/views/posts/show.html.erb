

<!-- Page Header -->
<!-- Set your background image for this header on the line below. -->
<header class="intro-header" style="background-image: url(../assets/post-bg.jpg)">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <div class="post-heading">
          <h1>Write down my story of life and everything</h1>
          <h2 class="subheading">Be a good rails developer, wherever I fall</h2>
          <span class="meta">This post was completed on <%= render_datetime(@post.post_date) %></span>
         </div>
      </div>
    </div>
  </div>
</header>

<!-- Post Content -->
<article>
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
        <h3><%= @post.title %> | <%= link_to "Edit", edit_post_path(@post)  %> | <%= link_to "Delete", @post, method: :delete, data: {confirm: "Are you sure?"} %></h3>
        <p><%= markdown(@post.content) %></p> <br>
        <div class="share text-center">
        <p class="share_icon">Shared this post</p>
          <a onclick="javascript:window.open('https://www.facebook.com/sharer.php?u=<%= post_url([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-facebook-square fa-2x" id="facebook"></i></a>
        <!-- Google Plus -->
        <a onclick="javascript:window.open('https://plus.google.com/share?url=<%= post_url([@post, {only_path: false}]) %>', '_blank', 'width=800, height=500, top=200, left=300');void(0);"><i class="fa fa-google-plus-square fa-2x" id="google"></i></a>
        </div>
      </div>
    </div>
  </div>
</article>

<hr>
