<%= simple_form_for @post do |f| %>
	
	<div class="form-group">
		<%= f.input :title %>
	</div>
	<div class="form-group">
		<%= f.input :content, row: 10 %>
	</div>
	<div class="form-group">
		<%= f.label "Select Date"  %> <br>
	  <%= f.text_field :post_date, placeholder: "YY-MM-DD" %>
	</div>
	
	<%= f.submit class:"btn btn-default btn-sm" %>

<% end %>