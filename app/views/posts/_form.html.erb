<%= simple_form_for @post do |f| %>
	<% if @post.errors.any? %>
    <div id="error_explanation">
      <h3><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>

      <ul>
      	<% @post.errors.full_messages.each do |message| %>
        	<li><%= message %></li>
      	<% end %>
      </ul>
    </div>
  <% end %>
	
	<div class="form-group">
		<%= f.input :title %>
	</div>
	<div class="form-group">
		<%= f.input :content, row: 10 %>
	</div>
	<div class="form-group">
		<%= f.label "Select Date"  %> <br>
	  <%= f.text_field :post_date, placeholder: "YY-MM-DD", require: true %>
	</div>
	
	<%= f.submit class:"btn btn-default btn-sm" %>

<% end %>